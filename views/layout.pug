doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(defer, src="/javascripts/bundle.js")
    link(
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css",
    rel="stylesheet", integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk",
    crossorigin="anonymous")
  body
    nav.navbar.navbar-dark.fixed-top.bg-dark
      a(href="/").navbar-brand チャット

      form.form-inline
        if user
          span.text-white.pr-3 #{user.username}
          a(href="/logout").btn.btn-danger ログアウト
        else
          a(href="/login").btn.btn-primary ログイン
    div.container
      block content
